extends layout
block content
    - var article = data.data[0];
    .page-content
        .container.marBot30.noPad
            h3.fullDarkHeader
                span.fullDarkHeader-inner
                    | #{article.title}
            .row
                .col-md-4
                    .article-image-wrapper
                        -var path = (article.photo)? 'upload/'+article.photo: 'img/def_article.jpg';
                        .art_img(style="background-image: url(#{path})")
                    .article-other-info
                        if(article.author.length > 0)
                            h4 Автор:
                            div #{article.author}
                        if(article.translator.length > 0)
                            h4 Переводчик:
                            div #{article.translator}
                        if(article.original_url.length > 0)
                            h4 Оригинал:
                            a(href="#{article.original_url}") #{article.original_url}
                        if(article.license.length > 0)
                            h4 Лицензия:
                            div #{article.license}
                .col-md-8
                    | !{article.body}
                    p
                        .ta-right
                            | #{article.published}

